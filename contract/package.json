    "@agoric/eslint-config": "^0.4.1-u17.1",
    "@agoric/governance": "^0.10.4-u17.1",
    "@agoric/inter-protocol": "^0.17.0-u17.1",
    "@agoric/internal": "^0.4.0-u17.1",
    "@agoric/network": "0.1.1-dev-d1562a1.0",
