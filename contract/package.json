  "bugs": {
    "url": "https://github.com/Agoric/dapp-orchestration-basics/issues"
  },
  "homepage": "https://github.com/Agoric/dapp-orchestration-basics#readme",
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021
    },
    "ignorePatterns": "bundles/**.js"
  },
  "files": [
    "*.js",
    "*.ts",
    "src"
  ],
  "_moduleAliases": {
    "starshipjs": "../node_modules/starshipjs"
  },
  "paths": {
    "starshipjs": "../node_modules/starshipjs"
  }
