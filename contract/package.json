    "@rollup/plugin-typescript": "^11.1.6",
    "@types/fs-extra": "^11",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.15.0",
    "agoric": "^0.22.0-u17.1",
    "ava": "^5.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
