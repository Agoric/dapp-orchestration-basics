    "@agoric/zone": "latest",
    "@ava/typescript": "^5.0.0",
    "@cosmjs/proto-signing": "^0.32.3",
    "@endo/base64": "latest",
    "@endo/bundle-source": "^3.5.0",
    "@endo/errors": "^1.2.4",
    "@endo/eslint-plugin": "^2.2.0",
    "@endo/far": "^1.1.4",
