    "ts-node": "^10.9.2",
    "tsimp": "^2.0.10",
    "type-coverage": "^2.26.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.18.0"
  },
  "resolutions": {
    "string-width": "^4.2.0",
    "strip-ansi": "^6.0.0",
    "wrap-ansi": "^7.0.0",
    "string-width-cjs": "npm:string-width@^4.2.0",
    "strip-ansi-cjs": "npm:strip-ansi@^6.0.0",
